@using BlogProject.Models.Entities
@model Comment

@{
    ViewData["Title"] = "Yorumu Düzenle";
}

<div class="container mt-4">
    <h3>Yorumu Düzenle</h3>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="BlogPostId" />

        <div class="mb-3">
            <label asp-for="Content" class="form-label"></label>
            <textarea asp-for="Content" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Güncelle</button>
        <a asp-controller="Blog" asp-action="Details" asp-route-id="@Model.BlogPostId" class="btn btn-secondary">İptal</a>
    </form>
</div>

